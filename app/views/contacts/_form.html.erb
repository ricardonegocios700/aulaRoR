
<%= form_with(model: contact, local: true) do |form| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>
      <ul> 
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <% contact.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group row">
    <%= form.label :name, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :email, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :email, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :telephone, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :telephone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :cell_phone, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :cell_phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :contact_type_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select("type_contact_id", @contact_type_options, { include_blank: 'Selecione...'}, class: "form-control") %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :excluded, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.check_box :excluded, class: "checkbox" %>
    </div>
  </div>

  <div class="col-auto">
    <%= form.submit nil, class: "btn btn-primary mb-2" %>
    <% unless params[:action] == 'new' %>
      <%= link_to I18n.t('contacts.show'), contact_path, type: "button", class: "btn btn-primary" %> 
    <% end %>
    <%= link_to I18n.t('contacts.back'), contacts_path, type: "button", class: "btn btn-primary" %>
  </div>
<% end %>
