
<table class="table table-hover">
  <thead class="thead-dark">
    <tr>

      <th><%= @contacts.human_attribute_name("name") %></th>
      <th><%= @contacts.human_attribute_name("email") %></th>
      <th><%= @contacts.human_attribute_name("telephone") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.telephone %></td>
        <td><%= link_to 'Show', contact %></td>
        <td style="width: 30px">
          <%= link_to edit_contact_path(contact) do %>
            <button type="button" class="btn btn-primary btn-circle">
              <i class="fa fa-edit"></i>
            </button>
          <% end %>
        </td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: t('confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="text-center">
  <%= paginate @contacts %>
</div>

<%= link_to I18n.t('links.new_contact'), new_contact_path, type: "button", class: "btn btn-primary" %>
