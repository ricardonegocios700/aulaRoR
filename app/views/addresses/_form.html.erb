<%= form_with(model: address, local: true) do |form| %>
  <% if address.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(address.errors.count, "error") %> prohibited this address from being saved:</h2>
      <ul> 
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
          <% address.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </div>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group row">
    <%= form.label :street, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :street, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :district, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :district, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :city, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :city, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :country, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :country, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :postal_code, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :type_address_id, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.select("type_address_id", @address_type_options, { include_blank: 'Selecione...'}, class: "form-control") %>
    </div>
  </div>

  <div class="form-group row">
    <%= form.label :excluded, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
    <%= form.check_box :excluded, class: "checkbox" %>
    </div>
  </div>

  <div class="col-auto">
    <%= form.submit nil, class: "btn btn-primary mb-2" %>
    <% unless params[:action] == 'new' %>
      <%= link_to I18n.t('address.show'), address_path, type: "button", class: "btn btn-primary" %> 
    <% end %>
    <%= link_to I18n.t('address_type.back'), addresses_path, type: "button", class: "btn btn-primary" %>
  </div>
<% end %>
