
<form>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("street"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address.street, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("district"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address.district, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("city"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address.city, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("state"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address.state, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("country"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address.country, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("postal_code"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address.postal_code, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("type_address_id "), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address.type_address_id , class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address.class.human_attribute_name("excluded"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= check_box_tag nil, @address.excluded, class: "excluded", readonly: true %>
    </div>
  </div>
</form>

<%= link_to I18n.t('links.edit'), edit_address_path(@address), type: "button", class: "btn btn-primary" %>
<%= link_to I18n.t('links.back'), addresses_path, type: "button", class: "btn btn-primary" %>

