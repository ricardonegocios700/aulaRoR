
<form>

  <div class="form-group row">
    <%= label_tag nil, @address_type.class.human_attribute_name("description"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address_type.description, class: "form-control", readonly: true %>
    </div>
  </div>


  <div class="form-group row">
    <%= label_tag nil, @address_type.class.human_attribute_name("note"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= text_field_tag nil, @address_type.note, class: "form-control", readonly: true %>
    </div>
  </div>

  <div class="form-group row">
    <%= label_tag nil, @address_type.class.human_attribute_name("excluded"), class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= check_box_tag nil, @address_type.excluded, class: "excluded", readonly: true %>
    </div>
  </div>

</form>

<%= link_to I18n.t('links.edit'), edit_address_type_path(@address_type), type: "button", class: "btn btn-primary" %>
<%= link_to I18n.t('links.back'), address_types_path, type: "button", class: "btn btn-primary" %>

